/* components/clickItem/clickItem.wxss */
.container{
  display: flex;
  justify-content: space-around;
  flex-wrap:wrap;
  box-sizing: border-box;
  padding-top:120rpx;
}
.img{
  width: 100%;
  height: 100%;
}
.item{
  width: 40%;
  height: 260rpx;
  padding-bottom: 60rpx;
  /* display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 60rpx */
}
.item-img{
  width: 100%;
  height: 220rpx;
  border: 1px solid grey;
  /* padding-bottom: 40rpx; */
  box-sizing: border-box;
}
.item-content-0,.item-content-1,.item-content-2,.item-content-3{
  width: 100%;
  height: 220rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
}
.item-content-0{
  background: #c06e96
}
.item-content-1{
  background: #b0a1c6
}
.item-content-2{
  background: #e2d69a
}
.item-content-3{
  background: #95b7d6
}
.item-content{
  color: white;
  font-size: 13px;
  font-weight: bold;
}