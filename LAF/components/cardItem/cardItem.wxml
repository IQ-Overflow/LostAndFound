<view class="card">
    <view class="top">
        <view class="person">
            <image class="avatarUrl" src="https://thirdwx.qlogo.cn/mmopen/vi_32/uDs87DwaPmNH441VpCVSx2K521HXRdYWJ1xzekS7E0NoDSLrdPZS49Mwp7AWynjIJUXcEJwKtib5hqtGDmrwtbg/132"/>
            <view class="nickname">{{cardMsg.poster && cardMsg.poster.userName}}</view>
        </view>
        <view class="moreMsg">
            <text class="type">{{cardMsg.flag ? '捡到' : '丢失'}}</text>
            <text class="time">{{cardMsg.time}}</text>
        </view>
    </view>
    <view class="cardMsg">
        <view class="text">
            <view class="num">学号：{{cardMsg.college}}</view>
            <view class="name">姓名：{{cardMsg.stuName}}</view>
            <view class="college">学院：{{cardMsg.college}}</view>
        </view>
        <image class="img" src="https://thirdwx.qlogo.cn/mmopen/vi_32/uDs87DwaPmNH441VpCVSx2K521HXRdYWJ1xzekS7E0NoDSLrdPZS49Mwp7AWynjIJUXcEJwKtib5hqtGDmrwtbg/132" />
    </view>
    <view class="func">
        <view class="state">正在进行</view>
        <view class="apply" bindtap="askForContact">申请联系</view>
    </view>
</view>