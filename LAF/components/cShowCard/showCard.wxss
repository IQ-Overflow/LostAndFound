/* components/cShowCard/showCard.wxss */

.card-container {
  width: 100vw;
  box-sizing: border-box;
  padding:  20rpx 40rpx;
}

.card {
  box-shadow: 0px 3px 10px rgba(106, 106, 106, 0.16);
  padding:  20rpx 40rpx;
  padding-bottom: 70rpx;
  position: relative;
}
.card-header{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header-left{
  display: flex;
  align-items: center;
}
.head-img{
  width: 60rpx;
  height: 60rpx;
  border:1px solid burlywood;
  border-radius: 50%;
  margin-right:20rpx;
}
.header-right{
  display: flex
}
.status{
  margin-left: 20rpx; 
}
.title{
  padding:  20rpx 0;
}
.content-text{
  padding-bottom: 20rpx
}
.content-picture{
  width: 150rpx;
  height: 150rpx;
  border: 1px solid darkcyan;
}
.btn{
  background: cadetblue;
  border-radius: 8rpx;
  position: absolute;
  right: 40rpx;
  padding:4rpx 6rpx;
}